<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_proposer_trajet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmed.miniprojet.ProposerTrajet">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:id="@+id/edDepart"
        android:hint="Point De DÃ©part" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/edDepart"
        android:layout_alignLeft="@+id/edDepart"
        android:layout_alignStart="@+id/edDepart"
        android:layout_marginTop="21dp"
        android:id="@+id/edArrive"
        android:hint="Point D'arrive" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/edArrive"
        android:layout_alignRight="@+id/edArrive"
        android:layout_alignEnd="@+id/edArrive"
        android:layout_marginTop="24dp"
        android:id="@+id/editText5"
        android:hint="Prix" />

    <TextView
        android:text="DT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/editText5"
        android:layout_alignBottom="@+id/editText5"
        android:layout_toRightOf="@+id/editText5"
        android:layout_toEndOf="@+id/editText5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edPlaceDesp"
        android:hint="Nombre De place Disponible"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />

    <Button
        android:text="Annuler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/btnAnnulerTraj"
        android:layout_below="@+id/spVoiture"
        android:layout_alignLeft="@+id/textView"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_alignStart="@+id/textView"
        android:onClick="annulerTrajet" />

    <Button
        android:text="Valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAnnulerTraj"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:id="@+id/btnValideTraj" />

    <TextView
        android:text="Votre Voiture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/spVoiture"
        android:layout_alignLeft="@+id/edPlaceDesp"
        android:layout_alignStart="@+id/edPlaceDesp"

        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/spVoiture"
        android:layout_below="@+id/edPlaceDesp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
